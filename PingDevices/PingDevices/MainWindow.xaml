<Window x:Class="PingDevices.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="195*"/>
            <ColumnDefinition Width="322*"/>
        </Grid.ColumnDefinitions>
        <ListBox >
            <ListBox.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FFD4D4D4" Offset="0.553"/>
                    <GradientStop Color="#FFF3F3F3" Offset="1"/>
                    <GradientStop Color="#FFF0F0F0"/>
                </LinearGradientBrush>
            </ListBox.Background>
            
        </ListBox>
        <Button Content="Button" Grid.Column="1" HorizontalAlignment="Left" Margin="27,10,0,0" VerticalAlignment="Top" Width="132" Height="46" Click="Button_Click"/>

    </Grid>
</Window>
